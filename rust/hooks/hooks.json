{
    "hooks": {
        "UserPromptSubmit": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "pip install -r ${CLAUDE_PLUGIN_ROOT}/scripts/requirements.txt"
                    },
                    {
                        "type": "command",
                        "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/prompt-check.py"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Edit | Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/hook-tools.py"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/hook-tools.py"
                    }
                ]
            }
        ]
    }
}
